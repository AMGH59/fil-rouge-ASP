@model List<Techno>
@inject FormatService _formatService;

<section class="w-75 h-75 ">
    <div>
        @if (Model != null)
        {
            <div>
                @foreach (Techno t in Model)
                {
                    <div class="card m-2">
                        <div class="bg-light">
                            <div class="card-body">
                                <h5 class="card-title mb-0">
                                    <a asp-controller="Techno" asp-action="Detail" asp-route-id=@t.Id>
                                        @t.Name
                                    </a>
                                </h5>
                                <br />
                                <p class="card-text">
                                    <a asp-controller="Techno" asp-action="Detail" asp-route-id=@t.Id>
                                        @_formatService.TextReduction(t.Description)
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
