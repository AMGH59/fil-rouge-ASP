@model List<Topic>


<section>
    @if (Model != null)
    {
        <div>
            @foreach (Topic t in Model)
            {
                <div>
                    <div>
                        <h2><a asp-controller="Topic" asp-action="" asp-route-id="@t.Id">@t.Question</a></h2>
                    </div>
                    <div>@t.Body</div>
                    <div>
                        <div>
                            @t.Responses.Count answers
                        </div>
                        <div>
                            posted by @t.Author at @t.Date
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="col alert alert-danger justify-content-center text-center">
            No question available
        </div>
    }
</section>

<section>
    <div class="row justify-content-center m-2">
        <a class="btn btn-info" asp-controller="Topic" asp-action="NewTopicForm">Post New Question</a>
    </div>
</section>